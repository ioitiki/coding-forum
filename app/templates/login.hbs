<div class="col-md-6 col-md-offset-3">
  <h2>Login</h2>
  <form  {{action "login" on "submit"}} id="login-form">
    <div class="form-group">
      <label for="email-input">Email address</label>
      {{input type="text" class="form-control" id="email-input" value=userEmail placeholder="Email"}}
    </div>
    <div class="form-group">
      <label for="password-input">Password</label>
      {{input type="password" class="form-control" id="password-input" value=userPassword placeholder="Password"}}
    </div>
    <button type="submit" class="btn btn-default"> Login </button>
  </form>
</div>
